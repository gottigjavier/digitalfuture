---
import Logo from "./Logo.astro";
import ThemeToggleButton from "./ThemeToggleButton.astro";
---

<div class="my-0">
    <nav class="my-0 topnav" id="myTopnav">
        <div class="logo">
            <a href="/"><Logo /></a>
        </div>
        <div class="theme">
            <ThemeToggleButton />
        </div>
        <a role="button" class="icon my-0" onclick="myFunction()">
            <div class="text-4xl">&Congruent;</div>
        </a>
        <a class="my-0" href="legales"><span>Legales</span></a>
        <a id="myBtn1" class="my-0" href=""><span>Contacto</span></a>
        <a class="my-0" href="/"><span>Inicio</span></a>
    </nav>
</div>

<script is:inline>
    function myFunction() {
        var x = document.getElementById("myTopnav");
        if (x.className === "my-0 topnav") {
            x.className += " responsive";
        } else {
            x.className = "my-0 topnav";
        }
    }

</script>

<style>
    .logo {
        position: absolute;
        width: 150px;
        margin-right: 88%;
        align-self: center;
    }

    .theme {
        float: right;
        align-self: center;
    }

    .topnav {
        justify-content: right;
        align-items: top;
        padding: 2rem 1rem 6rem 1rem;
        background-color: #121211;
        color: #fff;
    }

    .topnav a {
        float: right;
        display: block;
        color: #f2f2f2;
        text-align: center;
        padding: 0 16px;
        text-decoration: none;
        font-size: 1.2rem;
        align-self: center;
    }

    .topnav a:hover {
        color: #00bad3;
    }

    .topnav a.active {
        color: #00bad3;
    }

    .topnav .icon {
        display: none;
    }

    @media screen and (max-width: 768px) {
        .topnav a:not(:first-child) {
            display: none;
        }
        .topnav a.icon {
            margin: -5px;
            float: right;
            display: block;
        }
    }
    
    @media screen and (max-width: 768px) {
        .topnav.responsive {
            position: relative;
        }
        
        .topnav.responsive a {
            float: none;
            display: block;
            text-align: right;
            margin: 0;
            padding-right: 3rem;
        }

        .logo {
            margin-right: 75%;
        }
    }
</style>
