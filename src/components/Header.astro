---
import Logo from "./Logo.astro";
import ThemeToggleButton from "./ThemeToggleButton.astro";
---

<div class="my-0">
    <nav class="my-0 topnav" id="myTopnav">
        <div class="logo">
            <a href="/"><Logo /></a>
        </div>
        <div class="theme">
            <ThemeToggleButton />
        </div>
        <a role="button" class="icon my-0" onclick="myFunction()">
            <div class="text-4xl">&Congruent;</div>
        </a>
        <a class="nlink my-0" href="legales"><span>Legales</span></a>
        <a class="nlink my-0" href="contacto"><span>Contacto</span></a>
        <a class="nlink my-0" href="/"><span>Inicio</span></a>
    </nav>
</div>

<script is:inline>
    function myFunction() {
        var x = document.getElementById("myTopnav");
        if (x.className === "my-0 topnav") {
            x.className += " responsive";
        } else {
            x.className = "my-0 topnav";
        }
    }

</script>

<style>
    .logo a {
        position: absolute;
        width: 150px;
        margin:0 88% 5% 0;
        align-self: center;
        opacity: 0.75;
        /* color: #2986e5;  color del logo*/
    }

    .theme {
        float: right;
        align-self: center;
        padding: 20px 0 0 0;
    }

    .topnav {
        justify-content: right;
        padding: 1rem 1rem 5rem 1rem;
    }

    .topnav .nlink {
        float: right;
        padding: 25px 16px 0 16px;
        text-decoration: none;
        font-size: 1.1rem;
            
    }

    .topnav a:hover {
        color: #00bad3;
    }

    .topnav a.active {
        color: #00bad3;
    }

    .topnav .icon {
        display: none;
    }

    @media screen and (max-width: 768px) {
        .topnav a:not(:first-child) {
            display: none;
        }
        .topnav a.icon {
            margin: 15px;
            float: right;
            display: block;
        }
        .topnav .nlink {
        padding: 2px 5px;    
        }
    }
    
    @media screen and (max-width: 768px) {
        .topnav.responsive {
            position: relative;
        }
        
        .topnav.responsive a {
            float: none;
            display: block;
            text-align: right;
            margin: 0;
            padding-right: 3rem;
        }

        .logo {
            margin-right: 75%;
        }
    }
</style>
