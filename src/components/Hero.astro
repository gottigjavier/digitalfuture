---
// src/components/Hero.astro
---

<main class="px-4 pt-2 pb-12 text-center">
  <h1 class="text-xl lg:text-3xl font-bold mb-6">
    Abrimos la puerta al <span class="text-blue-500">Futuro</span>
  </h1>
  <div class="flex flex-col justify-center items-center space-y-4 md:space-y-0">
      <img class="rounded-lg" src="/pics/mundo-atras-h.avif" alt="imagen">
    </div>
    <h3 class="text-img">Digital Future</h3>
</main>

<style>
  .hero-content {
    justify-content: center;
  }
  img {
    width: 60%;
    transition: transform 2s;
    transform: rotate3D(-1,1,0, 0deg) translate(0%, 0%) scale(1, 1);
    -webkit-animation-name: outopacity;
    -webkit-animation-duration: 0.6s;
    animation-name: outopacity;
    animation-duration: 2s;
    opacity: 1;
  }
  
  img:hover {
    transform: rotate3D(-1,1,0, 55deg) translate(-1%, -20%) scale(0.8, 0.8);
    box-shadow: 0 12px 16px 0 rgba(58, 58, 182, 0.74), 0 17px 50px 0 rgba(54, 51, 119, 0.69);
    transition: box-shadow 2s transform 2s;
    -webkit-animation-name: inopacity;
    -webkit-animation-duration: 0.6s;
    animation-name: inopacity;
    animation-duration: 2s;
    opacity: 0;
  }

  @-webkit-keyframes inopacity {
        from {
            opacity: 1;
        }
        to {
            opacity: 0;
        }
    }

  @keyframes inopacity {
        from {
            opacity: 1;
        }
        to {
            opacity: 0;
        }
    }

    @-webkit-keyframes outopacity {
        from {
            opacity: 0;
        }
        to {
            opacity: 1;
        }
    }

  @keyframes outopacity {
        from {
            opacity: 0;
        }
        to {
            opacity: 1;
        }
    }
 
  .text-img {
    font-family: 'ZenDots';
    font-size: 5vw;
    z-index: 1;
    margin: -45vh 0 25vh 0;
    left: 2vw;
    text-shadow: -1px -1px 1px #9e78e4, 2px -2px 2px #80c8da, -2px 2px 2px #763ec0, 2px 2px 2px #9252bd;
  }

  @media screen and (max-width: 850px) and (orientation: landscape){
      img {
        width: 100%;
      }
      .text-img {
        margin: -60vh 0 35vh 0;
      }
    }

    @media screen and (max-width: 850px) and (orientation: portrait) {
      .text-img {
        margin: -5rem 0 2rem 0;
        
  }
    }
 </style>