        src="https://docs.google.com/forms/d/e/1FAIpQLSe1SZCssVDbkKmqAqTVd9jn3Dr9gioTqsx2CG2yQ__cAe1iww/viewform?embedded=true" 
            
            frameborder="0" 
            marginheight="0" 
            marginwidth="0">
        Cargando Formularioâ€¦
        </iframe>
    </div>
</Layout>

<style>
    /* form Content */
    .form-content {
        margin:1vh 25vw 30vh 25vw; /* Location of the box */
        position: relative;
        padding: 1rem 1rem;
        border: 2px solid #7a7a7a;
        border-radius: 1%;
        box-shadow:
        0 2px 3px 0 rgba(18, 18, 182, 0.54), 
        0 2px 3px 0 rgba(14, 11, 119, 0.49);
        -webkit-animation-name: animatetop;
        -webkit-animation-duration: 0.4s;
        animation-name: animatetop;
        animation-duration: 0.4s;
    }

    iframe {
        padding: 0 2rem 0 0;
        width: 49vmax; 
        height: 80vmax; 
    }

    /* Add Animation */
    @-webkit-keyframes animatetop {
        from {
            top: -300px;
            opacity: 0;
        }
        to {
            top: 0;
            opacity: 1;
        }
    }

    @keyframes animatetop {
        from {
            top: -300px;
            opacity: 0;
        }
        to {
            top: 0;
            opacity: 1;
        }
    }

    /* The Close Button */
    .close {
        color: white;
        float: right;
        font-size: 28px;
        font-weight: bold;
    }

    .close:hover,
    .close:focus {
        color: #000;
        text-decoration: none;
        cursor: pointer;
    }

    .form-header {
        padding: 5px 16px;
        background-color: #00bad3;
        border-radius: 1%;
    }

    .form-body {
        padding: 2px 16px;
        border-radius: 1%;
    }

    .form-footer {
        padding: 2px 16px;
        background-color: #00bad3;
        color: white;
        border-radius: 1%;
        text-wrap: balance;
    }

    label {
        color: #999999;
    }

    h2 {
        color: rgb(10, 10, 10);
    }

    p {
        margin: 0 0 1rem 0;
    }

    input,
    textarea {
        width: 100%;
        padding: 2px;
        color: black;
        background-color: rgb(211, 211, 211);
    }

    .send {
        font-weight: 700;
        margin: 0;
        padding: 10px 20px;
        border-radius: 15%;
        background-color: rgb(0, 211, 105);
    }

    @media screen and (max-width: 768px) and (orientation: portrait) {
        .form-content {
            margin:1rem 0 0 0;
        }
        iframe {
        padding: 0 0 0 0;
        width: 95vw; 
        height: 80vmax; 
    }
    }

    @media screen and (max-width: 768px) and (orientation: landscape) {
        .form-content {
            margin:1rem 0 0 0;
        }
        iframe {
        padding: 0 0 0 0;
        width: 95vw; 
        height: 80vmax; 
    }
    }
</style>
